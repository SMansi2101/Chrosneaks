<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/cartstyle.css">



</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <%- include('partials/header') %>
    <div class="absolute top-4 left-4">
        <h1 class="text-3xl font-bold logo">
            <span class="chro">Chro</span><span class="sneaks">sneaks</span>
        </h1>
    </div>
    <div class="container mx-auto p-4 cart-container mt-16">
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-4xl w-full">
            <h2 class="text-2xl font-bold mb-6 text-center text-indigo-600">Your Cart</h2>
            <% cartitems.forEach(function(item) { %>
            <div class="flex flex-col md:flex-row items-start mb-6">
                <div class="flex flex-col items-center mb-4 md:mb-0 md:mr-6 p-4 rounded-lg shadow-md" style="background-color: <%= item.bgcolor %>;">
                    <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="Product Image" class="w-48 h-48 object-cover rounded-lg mb-4 product-image">
                    <h3 class="text-xl font-semibold mb-2" style="color: <%= item.textcolor %>;"><%= item.name %></h3>
                    <p class="text-gray-700" style="color: <%= item.textcolor %>;">Net Total: <span class="font-bold"> Rs. <%= item.bill %></span></p>
                </div>
                <div class="flex-1 flex flex-col md:flex-row">
                    <div class="bg-gray-50 p-4 rounded-lg shadow-md price-breakdown flex-1">
                        <h3 class="text-xl font-semibold mb-4">Price Breakdown</h3>
                        <p class="text-gray-700">Total MRP: <span class="font-bold">Rs.<%= item.price %></span></p>
                        <p class="text-gray-700">Discount on MRP: <span class="font-bold">Rs.<%= item.discount %></span></p>
                        <p class="text-gray-700">Platform Fee: <span class="font-bold"> Rs.20 <%= item.platformFee %></span></p>
                        <p class="text-gray-700">Shipping Fee: <span class="font-bold"> Rs.<%= item.shippingfee %></span></p>
                        <hr class="my-4">
                        <p class="text-xl font-bold">Total Amount: <span class="text-indigo-600">Rs. <%= item.bill %></span></p>
                    </div>
                    <div class="flex items-center ml-4">
                        <form action="/cart/remove/<%= item.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="remove-btn text-white font-bold py-2 px-4 rounded">Remove from Cart</button>
                        </form>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
